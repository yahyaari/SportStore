@model Product

<style>
    .card {
        background-color: #777; /* Gri arkaplan */
        color: #fff; /* Başlık siyah yazı rengi */
    }

        .card h4 {
            font-weight: bold; /* Başlık kalın */
            color: black; /* Başlık siyah yazı rengi */
        }

    .badge {
        background-color: #00ff92; /* Badge arkaplanı */
        color: #000 !important; /* Metin rengi: Siyah, !important ile önceki tanımları ez */
        font-weight: bold !important; /* Başlık kalın */
    }

    .btn {
        background-color: #777; /* "Add To Cart" butonunun rengi */
        color: #fff; /* Buton yazı rengi */

    }
</style>

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form id="@Model.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <div class="card-body">
            <p class="card-text">
                @Model.Description
            </p>
            <button type="submit" class="btn btn-success btn-sm float-right">
                Add To Cart
            </button>
        </div>
    </form>
</div>
